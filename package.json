{
  "name": "@wsgrah/scrolly-lab",
  "private": true,
  "version": "0.1.0",
  "description": "Monorepo for scroll-driven animation libraries built with GSAP and React.",
  "main": "index.js",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "test": "turbo test",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml}\"",
    "publish:scrolly": "pnpm --filter @wsgrah/scrolly build && pnpm --filter @wsgrah/scrolly publish --access public",
    "publish:scrolly-three": "pnpm --filter @wsgrah/scrolly-three build && pnpm --filter @wsgrah/scrolly-three publish --access public",
    "publish:all": "pnpm build && pnpm --filter @wsgrah/scrolly publish --access public && pnpm --filter @wsgrah/scrolly-three publish --access public",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml}": [
      "prettier --write"
    ]
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "package.json",
    "CHANGELOG.md"
  ],
  "keywords": [
    "scroll-animation",
    "gsap",
    "react",
    "scrollytelling"
  ],
  "author": "Wayne Graham",
  "license": "MIT",
  "packageManager": "pnpm@10.28.2",
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^9.39.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/ui": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "happy-dom": "^20.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "turbo": "^2.8.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
